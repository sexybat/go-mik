<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_54dp"
    android:layout_alignParentTop="true"
    android:background="@color/color_toolbar"
    android:gravity="center"
    app:contentInsetEnd="@dimen/nol_dp"
    app:contentInsetLeft="@dimen/nol_dp"
    app:contentInsetRight="@dimen/nol_dp"
    app:contentInsetStart="@dimen/nol_dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5.0">

        <FrameLayout
            android:id="@+id/f_btn_feeds"
            android:layout_width="@dimen/nol_dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/btn_feeds"
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/height_24dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@mipmap/ico_feeds_active" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f_btn_explorer"
            android:layout_width="@dimen/nol_dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/btn_explorer"
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/height_24dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@mipmap/ico_explorer" />
        </FrameLayout>

